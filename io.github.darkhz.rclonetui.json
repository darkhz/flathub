{
  "id" : "io.github.darkhz.rclone-tui",
  "runtime" : "org.freedesktop.Platform",
  "runtime-version" : "22.08",
  "sdk" : "org.freedesktop.Sdk",
  "build-options" : {
    "env" : {
      "GOBIN" : "/app/bin",
      "GOROOT" : "/usr/lib/sdk/golang"
    }
  },
  "command" : "rclone-tui",
  "sdk-extensions" : [
    "org.freedesktop.Sdk.Extension.golang"
  ],
  "finish-args" : [
    "--share=network",
    "--filesystem=home"
  ],
  "modules" : [
    {
      "name" : "rclone-tui",
      "buildsystem" : "simple",
      "sources" : [
        {
          "url" : "https://github.com/darkhz/rclone-tui/releases/download/v0.0.2/rclone-tui_source_flatpak.tar.gz",
          "sha256" : "884b0aff4982f6a6504d6d8548676f9a902d90d4ba0dee5ac9ed5ab852075cdc",
          "type" : "archive"
        }
      ],
      "build-commands" : [
        "$GOROOT/bin/go build -trimpath -o rclone-tui",
        "install -Dm00755 rclone-tui $FLATPAK_DEST/bin/rclone-tui"
      ]
    }
  ]
}
