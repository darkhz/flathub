{
  "id" : "io.github.darkhz.rclonetui",
  "runtime" : "org.freedesktop.Platform",
  "runtime-version" : "22.08",
  "sdk" : "org.freedesktop.Sdk",
  "build-options" : {
    "env" : {
      "GOBIN" : "/app/bin",
      "GOROOT" : "/usr/lib/sdk/golang"
    }
  },
  "command" : "rclone-tui",
  "sdk-extensions" : [
    "org.freedesktop.Sdk.Extension.golang"
  ],
  "finish-args" : [
    "--share=network",
    "--filesystem=home"
  ],
  "modules" : [
    {
      "name" : "rclone-tui",
      "buildsystem" : "simple",
      "sources" : [
        {
          "url" : "https://github.com/darkhz/rclone-tui/releases/download/v0.0.2/flatpak.tar.gz",
          "sha256" : "d68d650de5376320d20fb0f101435b510f69a2ca2fd55b25ba626e69bdb11757",
          "type" : "archive"
        }
      ],
      "build-commands" : [
        "$GOROOT/bin/go build -trimpath -o rclone-tui",
        "install -Dm00755 rclone-tui /app/bin/rclone-tui",
        "install -Dm00755 flatpak-data/rclonetui.desktop /app/share/applications/io.github.darkhz.rclonetui.desktop",
        "install -Dm00755 flatpak-data/rclonetui.metainfo.xml /app/share/metainfo/io.github.darkhz.rclonetui.metainfo.xml",
        "install -Dm00755 flatpak-data/rclonetui.png /app/share/icons/hicolor/scalable/apps/io.github.darkhz.rclonetui.png"
      ]
    }
  ]
}
